<div id="contactSupport" class="modal  fade" tabindex="-1" role="dialog" aria-labelledby="contactSupport" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <form class="form-vertical" role="form" method="post" action="/users/contactSupport">
          <div class="modal-header">
            <h4 class="modal-title">Contacter le support</h4>
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span> <span class="sr-only">close</span></button>
          </div>
          <div class="container-fluid modal-body">
            <div class="form-group">
              <div class="col-sm-12">
                <input type="email" name="sender" id="sender" class="form-control" required value="" placeholder="Votre adresse mail" />
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-12">
                <input type="text" name="subject" id="subject" class="form-control" required placeholder="L'objet du mail" />
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-12">
                <textarea rows="11" name="message" id="message" class="form-control" placeholder="Le contenu de votre mail"></textarea>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <div class="form-group">
              <div class="col-sm-12">
                <button type="submit" class="btn btn-primary">Envoyer</button>
              </div>
            </div>
          </div>
        </form>
    </div>
  </div>
</div>
