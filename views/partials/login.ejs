<div id='login' class="visible" style="display:none">
  <form action="/users/login" method="post">
    <div class="form-group row">
      <label class="col-md-4 col-form-label">Votre profil : </label>
      <div class="col-md-8">
        <label class="radio-inline">
          <input type="radio" name="profil" value="professeur" checked>Professeur
        </label>
        <label class="radio-inline">
          <input type="radio" name="profil" value="eleve" > Eleve
        </label>
        <label class="radio-inline">
          <input type="radio" name="profil" value="admin"> Administration
        </label>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-md-4 col-form-label">login</label>
      <div class="col-md-8">
        <input class="form-control" type="text" name="login" placeholder="votre identifiant" required="">
      </div>
    </div>
    <div class="form-group row">
      <label class="col-md-4 col-form-label">Mot de passe</label>
      <div class="col-md-8">
        <input class="form-control" type="password" name="logpassword" placeholder="Password" required="">
      </div>
    </div>
    <div class="form row">
      <div class="col-md-4">
        <a href="/users/forgot">Mot de passe oublié</a><button  type="button" class="btn " style="background-color:transparent"  data-container-fluid="body" data-toggle="popover" data-placement="top" data-content="Pour des raisons de sécurité votre adresse mail sera enregistrée dans la base"><i class="fa fa-info"></i></button>
      </div>
      <div class="col-md-8">
        <button type="submit" class="btn btn-lg btn-primary float-right">LOGIN</button>
      </div>
    </div>
  </form>
</div>
