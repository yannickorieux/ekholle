<div id="addModifierProfesseur" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="addModifierProfesseur" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form id="AddModifierProfesseurForm" data-mode="ajouter" data-idprofesseur="" role="form">
        <fieldset>
          <div class="modal-header">
            <h4 class="modal-title">Ajouter ou Modifier un enseignant</h4>
